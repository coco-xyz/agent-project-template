# AI Agents Environment Configuration
# Copy this file to .env and update the values as needed
# Environment variables follow the pattern: AI_AGENTS_<CONFIG_NAME>
# Based on ai_agents/core/config.py - Settings class structure

# For Docker environments:
# - Database URL should use service name 'postgres' as host
# - Redis URL should use service name 'redis' as host
# For local development:
# - Use 'localhost' as host for both database and Redis

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (default: 0.0.0.0)
AI_AGENTS_HOST=0.0.0.0

# Server port (default: 8080)
AI_AGENTS_PORT=8080

# Enable debug mode (default: False)
AI_AGENTS_DEBUG=false

# Log level (default: info)
AI_AGENTS_LOG_LEVEL=info

# Application environment (default: development)
AI_AGENTS_ENVIRONMENT=development

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection URL (default: sqlite:///./ai_agents.db)
# For Docker: postgresql://ai_agents_user:ai_agents_password@postgres:5432/ai_agents
# For local development: postgresql://ai_agents_user:ai_agents_password@localhost:5432/ai_agents
AI_AGENTS_DATABASE__URL=sqlite:///./ai_agents.db

# Enable SQL query logging (default: False)
AI_AGENTS_DATABASE__ECHO=false

# Connection Pool Configuration
AI_AGENTS_DATABASE__POOL_SIZE=15
AI_AGENTS_DATABASE__MAX_OVERFLOW=25
AI_AGENTS_DATABASE__POOL_TIMEOUT=60
AI_AGENTS_DATABASE__POOL_RECYCLE=3600
AI_AGENTS_DATABASE__POOL_PRE_PING=true
AI_AGENTS_DATABASE__POOL_RESET_ON_RETURN=commit

# Connection Timeout (basic)
AI_AGENTS_DATABASE__CONNECT_TIMEOUT=10

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection URL (default: redis://localhost:6379/0)
# For Docker: redis://redis:6379/0
# For local development: redis://localhost:6379/0
AI_AGENTS_REDIS__URL=redis://localhost:6379/0

# Redis host (default: localhost)
# For Docker: redis
# For local development: localhost
AI_AGENTS_REDIS__HOST=localhost

# Redis port (default: 6379)
AI_AGENTS_REDIS__PORT=6379

# Redis database number (default: 0)
AI_AGENTS_REDIS__DB=0

# Redis password (optional)
AI_AGENTS_REDIS__PASSWORD=

# Redis SSL and timeout settings
AI_AGENTS_REDIS__SSL=false
AI_AGENTS_REDIS__CONNECT_TIMEOUT=3000
AI_AGENTS_REDIS__SOCKET_TIMEOUT=3000

# Redis connection pool settings
AI_AGENTS_REDIS__POOL_MAX_CONNECTIONS=8
AI_AGENTS_REDIS__POOL_MAX_IDLE=8
AI_AGENTS_REDIS__POOL_MIN_IDLE=0
AI_AGENTS_REDIS__POOL_MAX_WAIT=-1

# =============================================================================
# API Configuration
# =============================================================================

# API title (default: AI Agents)
AI_AGENTS_API__TITLE=AI Agents

# API description (default: Intelligent agent system)
AI_AGENTS_API__DESCRIPTION=Intelligent agent system

# API version (default: 0.1.0)
AI_AGENTS_API__VERSION=0.1.0

# API documentation URL (default: /docs)
AI_AGENTS_API__DOCS_URL=/docs

# ReDoc documentation URL (default: /redoc)
AI_AGENTS_API__REDOC_URL=/redoc

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins (default: "*")
# Use comma-separated values for multiple origins: origin1.com,origin2.com
AI_AGENTS_CORS__ALLOW_ORIGINS=*

# Allow credentials (default: False)
AI_AGENTS_CORS__ALLOW_CREDENTIALS=false

# Allowed methods (default: "GET,POST,PUT")
# Use comma-separated values: GET,POST,PUT,DELETE
AI_AGENTS_CORS__ALLOW_METHODS=GET,POST,PUT

# Allowed headers (default: "*")
# Use comma-separated values for multiple headers: header1,header2
AI_AGENTS_CORS__ALLOW_HEADERS=*

# =============================================================================
